<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.TrainInfoController">


    <RelativeLayout
        android:id="@+id/distance_info"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/distance_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Distance"
            android:textColor="@color/black"
            android:textSize="50sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/time_info"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/distance_info">
        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Peace"
            android:textColor="@color/black"
            android:textSize="50sp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/time_info"
        android:id="@+id/other_info">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/speed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Speed"
                android:textAlignment="center"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textAlignment="center"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/temp_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Temp"
                android:textAlignment="center"
                android:textSize="20sp"
                />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/map_info"
        android:layout_below="@+id/other_info"
        android:layout_centerHorizontal="true">
        <org.osmdroid.views.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="@string/delete"
        android:textSize="20sp"
        android:textColor="@color/red_2"
        android:backgroundTint="@color/no"
        android:background="@color/no"
        android:id="@+id/delete_button"/>



</RelativeLayout>